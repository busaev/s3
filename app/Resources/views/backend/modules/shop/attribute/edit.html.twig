{% extends 'backend/base.html.twig' %}

{% form_theme edit_form 'Form/fields.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-lg-12">
            {{ wo_render_breadcrumbs({separator: '', listClass: "breadcrumb margin-top-20"}) }}
        </div>
    </div>

    {{ actions(entityCode, 'edit', entity) }}
                    
    {% include 'backend/flash_messages.html.twig' %}

    <div class="row">
        <div class="col-lg-12">

            <h1>{{'Editing'|trans({}, "backend")}}</h1>

            {{ form_start(edit_form, {'attr': {'class': 'entity-form edit-form'}}) }}
                {{ form_row(edit_form.title) }}
                {{ form_row(edit_form.description) }}
                {{ form_row(edit_form.media) }}
                {{ form_row(edit_form.inPreview) }}
                {{ form_row(edit_form.inFilters) }}
                {{ form_row(edit_form.productType) }}
                {{ form_row(edit_form.entryStatus) }}
                {{ form_row(edit_form.dataType) }}
                {{ form_row(edit_form.viewType) }}
                
                <h3>Values</h3>
                <ul class="values" data-prototype="{{ form_widget(edit_form.values.vars.prototype)|e('html_attr') }}">
                    {% for value in edit_form.values %}
                        <li>{{ form_row(value) }}</li>
                    {% endfor %}
                </ul>
                
            {{ form_end(edit_form) }}

        </div>
    </div>
{% endblock %}


{% block stylesheets %}{% endblock stylesheets %}


{% block javascripts %}
    
    {% javascripts  output="js/compiled/backend.js" 
        '../app/Resources/public/backend/js/entities.js' 
        '../app/Resources/public/backend/js/modules/shop/attribute.js' 
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    
{% endblock javascripts %}
