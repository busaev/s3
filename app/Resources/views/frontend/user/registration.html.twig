{% extends 'frontend/base.html.twig' %}

{% block body %}

    <div class="container">
        
    
        {{ render(controller('AppBundle:Frontend/Core/Navigation:show', { 'params': {'code': 'top_menu'} })) }}
    
        {% if error is defined and error|length > 0 %}
            {{ error }}
        {% endif %}

        <div class="container">
            <div class="row">
                <div class="col-md-4 col-md-offset-4">
                    <div class="login-panel panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title">Регистрация</h3>
                        </div>
                        <div class="panel-body">
                            {{ form_start(form, {'attr': {'novalidate': 'novalidate', 'class': 'user-form new-form'}}) }}
                            {{ form_widget(form) }}
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

 
{% endblock %}

{% block stylesheets %}{% endblock %}
